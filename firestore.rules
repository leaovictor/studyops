rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.uid == 'M9CWoXUk1HaW1e5CaxlarH6LxE83';
    }

    // Configs: Users need to read the API Key to use AI, but only Admin can write.
    match /configs/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Shared Questions: Everyone can read and create, only Admin can moderate (update/delete).
    match /shared_questions/{docId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // AI Usage tracking: Users can only create and read their own logs, Admin can see everything.
    match /usage/{docId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // Performance Logs: Strictly private.
    match /question_logs/{docId} {
      allow get, list: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    // FSRS Review Logs: Strictly private by userId ownership.
    match /fsrs_review_logs/{docId} {
      allow get, list: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // User Profiles: Allow read/list if it's the owner OR if searching by their own authenticated email.
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || resource.data.email == request.auth.token.email);
      allow list: if isAuthenticated() && request.query.limit <= 10 && request.query.filters.size() > 0;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Study Journals (Reflexão Diária): Strictly private.
    match /study_journals/{docId} {
      allow get, list: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // User Data (Goals, Subjects, Topics, etc.): Strictly private.
    match /{collection}/{docId} {
      allow read, write: if (
        collection in ['goals', 'subjects', 'topics', 'study_plans', 'daily_tasks', 'study_logs', 'error_notebook', 'flashcards', 'pomodoro_settings']
      ) && (
        (resource != null && isOwner(resource.data.userId)) ||
        (resource == null && isOwner(request.resource.data.userId)) ||
        (collection == 'pomodoro_settings' && isOwner(docId))
      );
    }
  }
}
