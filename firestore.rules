rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Goals: user owns docs
    match /goals/{docId} {
      allow get, list: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Subjects: user owns docs
    match /subjects/{docId} {
      allow get, list: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Topics: user owns docs
    match /topics/{docId} {
      allow get, list: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Study plans: user owns docs
    match /study_plans/{docId} {
      allow get, list: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Daily tasks: user owns docs
    match /daily_tasks/{docId} {
      allow get, list: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Study logs: user owns docs
    match /study_logs/{docId} {
      allow get, list: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Error notes: user owns docs
    match /error_notebook/{docId} {
      allow get, list: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Flashcards: user owns docs
    match /flashcards/{docId} {
      allow get, list: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Pomodoro Settings: user owns docs, docId is userId
    match /pomodoro_settings/{docId} {
      allow read, write: if isOwner(docId);
    }

    // FSRS Review Logs: authenticated users can read/write (usually should have userId check but topics and goal checks are primary)
    match /fsrs_review_logs/{docId} {
       allow read, write: if isAuthenticated();
    }

    // Questions Bank: authenticated users can read, only admin or owners can write
    match /questions/{docId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && (request.resource.data.ownerId == "admin" || request.resource.data.ownerId == request.auth.uid);
      allow update, delete: if isAuthenticated() && (resource.data.ownerId == "admin" || resource.data.ownerId == request.auth.uid);
    }
  }
}
